# =============================================================================
# Django Backend - General Environment Variables Example
# =============================================================================
# This is a general example file. For specific environments, use:
#   - env.development.example (for local development)
#   - env.production.example (for production deployment)
#
# Copy the appropriate file to .env and update with your actual values
# NEVER commit .env to version control!
# =============================================================================

# SECRET_KEY - Generate a new one for production!
# Run: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG - Set to False in production
DEBUG=True

# ALLOWED_HOSTS - Comma-separated list of allowed hostnames
# For development: localhost,127.0.0.1
# For production: intell.cedia.org.ec
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment - Determines which settings module to use
# Options: development, production, testing
ENVIRONMENT=development

# Database Configuration
# ======================
# For SQLite (development default - leave DATABASE_URL empty or unset)
# DATABASE_URL=

# For PostgreSQL (development with docker-compose)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://intell_user:patents2026$@localhost:5432/intell

# For PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Alternative PostgreSQL settings (if not using DATABASE_URL)
# POSTGRES_DB=intell
# POSTGRES_USER=intell_user
# POSTGRES_PASSWORD=patents2026$
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# CORS Configuration
# =================
# CORS_ALLOWED_ORIGINS - Comma-separated list of allowed origins
# For development: http://localhost:3000,http://127.0.0.1:3000
# For production: https://intell.cedia.org.ec
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# CORS_ALLOW_ALL_ORIGINS - Only for development! Never True in production
CORS_ALLOW_ALL_ORIGINS=False

# CSRF Configuration (for cross-origin requests in development)
# Required when frontend and backend run on different origins
# For production behind reverse proxy (same domain): https://intell.cedia.org.ec
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Microsoft OAuth2 / Azure AD / Entra ID Configuration
# =======================================================
# Get these values from Azure Portal > App Registrations
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-or-common

# Redirect URIs
# For development: http://localhost:8000/api/auth/microsoft/callback/
# For production: https://intell.cedia.org.ec/api/auth/microsoft/callback/
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback/
MICROSOFT_LOGIN_REDIRECT_URL=http://localhost:3000/en/dashboard
MICROSOFT_LOGIN_ERROR_URL=http://localhost:3000/en/login

# Email Configuration
# ===================
# For development: Use console backend (emails printed to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production: Use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@intell.cedia.org.ec

# Redis Configuration (for Celery and Channels)
# =============================================
# Celery uses DB 0, Channels uses DB 1
# For development: redis://localhost:6379
# For production (Docker): redis://redis:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# Internationalization
# ====================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Logging
# =======
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DJANGO_LOG_LEVEL=INFO

# AI Descriptions / LiteLLM Configuration
# =======================================
# API key for LiteLLM provider (used for AI-generated chart descriptions)
# Get this from your LiteLLM provider or CEDIA API
LITELLM_API_KEY=your-litellm-api-key-here
# Base URL for LiteLLM API (default: CEDIA API endpoint)
LITELLM_BASE_URL=https://api.cedia.org.ec/v1

# Additional Settings
# ===================
# ADMIN_URL=admin/  # Custom admin URL for security (optional)
