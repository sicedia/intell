# =============================================================================
# Django Backend - Development Environment Variables
# Copy to .env for local development
# NEVER commit .env to version control!
# =============================================================================

# Django Core Settings
# ====================
# SECRET_KEY - For development, a simple key is OK (change in production!)
SECRET_KEY=django-insecure-dev-key-change-in-production

# DEBUG - Always True in development
DEBUG=True

# ALLOWED_HOSTS - Comma-separated list
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment - Determines which settings module to use
ENVIRONMENT=development

# Database Configuration
# ======================
# Option 1: SQLite (default for development - no setup needed)
# Leave DATABASE_URL empty or unset

# Option 2: PostgreSQL (with docker-compose)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://intell_user:patents2026$@localhost:5432/intell

# Alternative PostgreSQL settings (if not using DATABASE_URL)
# POSTGRES_DB=intell
# POSTGRES_USER=intell_user
# POSTGRES_PASSWORD=patents2026$
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# CORS Configuration
# =================
# Allow frontend running on localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_ALL_ORIGINS=False

# CSRF Configuration
# =================
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Microsoft OAuth2 / Azure AD / Entra ID Configuration
# =======================================================
# Get these values from Azure Portal > App Registrations
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-or-common

# Redirect URIs for development
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback/
MICROSOFT_LOGIN_REDIRECT_URL=http://localhost:3000/en/dashboard
MICROSOFT_LOGIN_ERROR_URL=http://localhost:3000/en/login

# Email Configuration
# ===================
# Use console backend for development (emails printed to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For testing with real SMTP (optional):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (for Celery and Channels)
# =============================================
# Celery uses DB 0, Channels uses DB 1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1

# Internationalization
# ====================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Logging
# =======
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# In development, INFO or WARNING is recommended
DJANGO_LOG_LEVEL=INFO

# AI Descriptions / LiteLLM Configuration
# =======================================
# API key for LiteLLM provider (used for AI-generated chart descriptions)
LITELLM_API_KEY=your-litellm-api-key-here
# Base URL for LiteLLM API (default: CEDIA API endpoint)
LITELLM_BASE_URL=https://api.cedia.org.ec/v1

# Additional Settings
# ===================
# ADMIN_URL=admin/  # Custom admin URL for security (optional)
