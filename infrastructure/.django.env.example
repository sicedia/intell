# =============================================================================
# Django Backend Environment Variables for Production (Docker)
# Copy to .django.env and fill in your values
# This file is used by docker-compose.prod.yml for the backend service
# =============================================================================

# Django Settings
# ---------------
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production

# NEVER set DEBUG=True in production
DEBUG=False

# Comma-separated list of allowed hostnames
# IMPORTANT: Update with your actual domain
ALLOWED_HOSTS=intell.cedia.org.ec

# CORS - Comma-separated list of allowed origins
# IMPORTANT: Update with your actual domain
CORS_ALLOWED_ORIGINS=https://intell.cedia.org.ec
CORS_ALLOW_CREDENTIALS=True

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=https://intell.cedia.org.ec

# Database (set via docker-compose environment, but can override here)
# DATABASE_URL=postgresql://user:password@db:5432/intell

# Redis (set via docker-compose environment, but can override here)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
# REDIS_URL=redis://redis:6379/1

# Security Settings (enable for HTTPS)
# ------------------------------------
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Microsoft OAuth2 / Azure AD / Entra ID Configuration
# =======================================================
# Get these values from Azure Portal > App Registrations
# Required for Microsoft login functionality
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-or-common
# Redirect URIs (must match Azure App Registration)
MICROSOFT_REDIRECT_URI=https://intell.cedia.org.ec/api/auth/microsoft/callback/
MICROSOFT_LOGIN_REDIRECT_URL=https://intell.cedia.org.ec/en/dashboard
MICROSOFT_LOGIN_ERROR_URL=https://intell.cedia.org.ec/en/login

# Email Configuration (Optional)
# ------------------------------
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@intell.cedia.org.ec

# Logging
# -------
DJANGO_LOG_LEVEL=WARNING

# Internationalization
# --------------------
LANGUAGE_CODE=es
TIME_ZONE=America/Lima
