# =============================================================================
# Django Backend Environment Variables - LOCAL TESTING
# This file is used by docker-compose.prod.yml for the backend service
# =============================================================================

# Django Settings
# ---------------
# Using a test secret key for local development
SECRET_KEY=django-insecure-local-test-key-change-in-production-12345678901234567890

# Set to False to simulate production, but allow localhost access
DEBUG=False

# Comma-separated list of allowed hostnames - localhost for local testing
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS - Comma-separated list of allowed origins - localhost for local testing
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://127.0.0.1:3000,http://127.0.0.1:80
CORS_ALLOW_CREDENTIALS=True

# CSRF Trusted Origins - localhost for local testing
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:80,http://127.0.0.1:3000,http://127.0.0.1:80

# Security Settings (disabled for local HTTP testing)
# ------------------------------------
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Microsoft OAuth2 / Azure AD / Entra ID Configuration
# =======================================================
# Optional for local testing - can be left as placeholders
MICROSOFT_CLIENT_ID=your-client-id-here
MICROSOFT_CLIENT_SECRET=your-client-secret-here
MICROSOFT_TENANT_ID=your-tenant-id-or-common
# Redirect URIs for localhost
MICROSOFT_REDIRECT_URI=http://localhost/api/auth/microsoft/callback/
MICROSOFT_LOGIN_REDIRECT_URL=http://localhost/en/dashboard
MICROSOFT_LOGIN_ERROR_URL=http://localhost/en/login

# Email Configuration (Optional)
# ------------------------------
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Logging
# -------
DJANGO_LOG_LEVEL=INFO

# Internationalization
# --------------------
LANGUAGE_CODE=es
TIME_ZONE=America/Lima

# AI Descriptions / LiteLLM Configuration
# =======================================
# API key for LiteLLM provider (used for AI-generated chart descriptions)
# For local testing, you can use a placeholder or your actual key
LITELLM_API_KEY=your-litellm-api-key-here
# Base URL for LiteLLM API (default: CEDIA API endpoint)
LITELLM_BASE_URL=https://api.cedia.org.ec/v1
